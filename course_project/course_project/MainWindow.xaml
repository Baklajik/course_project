<Window x:Class="course_project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Memory Mapped File App" Height="450" Width="600">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Проецирование файлов в память" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBox Name="FilePathTextBox" Width="300" Height="30" IsReadOnly="True" Margin="0,0,10,0"/>
                <Button Name="BrowseButton" Content="Загрузить файл" Click="BrowseButton_Click" Width="100" Height="30"/>
            </StackPanel>

            <TextBlock Text="Укажите диапазон процентов (от 0 до 100):" Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBox Name="StartPercentageTextBox" Width="50" Height="30" Margin="0,0,10,0"/>
                <TextBlock VerticalAlignment="Center" Margin="0,0,10,0" Text="От"/>
                <TextBox Name="EndPercentageTextBox" Width="50" Height="30" Margin="0,0,10,0"/>
                <TextBlock VerticalAlignment="Center" Margin="0,0,10,0" Text="До"/>
            </StackPanel>

            <Button Name="StartProcessButton" Content="Запустить" Click="StartProcessButton_Click" Width="100" Height="30" Margin="0,0,0,10"/>
            
        </StackPanel>
    </Grid>
</Window>
